#!/usr/bin/env node

var input = process.argv.slice(2)[0],
    dest = process.argv.slice(2)[1],
    die = process.exit.bind(process);

if (!input) {
  console.log('usage: diff-sites FILE [OUTPUT]');
  die(1);
}

var fs = require('fs-extra'),
    path = require('path'),
    jsyaml = require('js-yaml'),
    spawn = require('child_process').spawn;

var buffer = fs.readFileSync(input).toString();

try {
  var sequence = jsyaml.safeLoad(buffer, { filename: input });
} catch (e) {
  console.log(e.message || e.toString());
  die(1);
}

var builder = require('../lib/builder');

var jsonId = path.basename(input).replace(/\.\w+$/, ''),
    jsonFile = path.join(process.cwd(), dest || 'generated', jsonId, 'index.json');

fs.outputJsonSync(jsonFile, builder(sequence));

process.env.DIFF_JSON = jsonFile;
process.env.DIFF_LIB_DIR = path.join(__dirname, '../lib/casper');
process.env.DIFF_SCREEN_DIR = path.join(path.dirname(jsonFile), 'screenshots');

var args = [];

args.push(path.join(__dirname, '../lib/casper/bootstrap.js'));
args.push('--ignore-ssl-errors=true');
args.push('--ssl-protocol=any');

var child = spawn('casperjs', args);

child.stdout.on('data', function(data) {
  process.stdout.write(data.toString());
});

child.on('close', function(code) {
  die(code);
});
